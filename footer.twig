  <!-- Подключаем скрипты -->
  <script src="../assets/js/modules/lozad.min.js"></script>
  <script src="../assets/js/modules/micromodal.min.js"></script>
  <script src="../assets/js/modules/tooltip.js"></script>
  <script src="../assets/js/global.js"></script>
  <script src="../assets/js/header.js"></script>
  <script src="../assets/js/menu.js"></script>
  <script src="../assets/js/contacts-btn.js"></script>


  <!-- Подключаем футер -->
  <footer class="footer">
    <div class="container container-footer">
      <!-- Верхняя часть -->
      <div class="footer__top">
        <!-- Контакты -->
        <div class="footer__logo-container footer__row-container">
          <!-- Лого -->
          <div class="footer__logo">
            {% if sf.logo.image %}
              {{ load_svg('image/' ~ sf.logo.image) }}
            {% endif %}
            <div class="logo-box">
              <span class="logo-span-main">REALTOR</span>
              <span class="logo-span-sub">Estate Agency</span>
            </div>
          </div>
          <!-- Адресса -->
          <div class="footer__logo-address">
            <span class="logo-address-street">{{ sf.contacts.address_street }}</span>
            <span class="logo-address-city">{{ sf.contacts.address_city }}</span>
            {% if sf.contacts.phone_office %}
              <a class="logo-address-office" href="tel:{{ sf.contacts.phone_office|replace({' ': '', '(': '', ')': '', '-': ''}) }}">
                {{ sf.contacts.phone_office_label }} {{ sf.contacts.phone_office }}
              </a>
            {% endif %}
            {% if sf.contacts.phone_mobile %}
              <a class="logo-address-phone" href="tel:{{ sf.contacts.phone_mobile|replace({' ': '', '(': '', ')': '', '-': ''}) }}">
                {{ sf.contacts.phone_mobile_label }} {{ sf.contacts.phone_mobile }}
              </a>
            {% endif %}
          </div>
          <!-- О нас -->
          <div class="footer__logo-list">
            {% if sf.about_links.items %}
              {% for link in sf.about_links.items %}
                <a href="{{ link.href }}">{{ link.text }}</a>
              {% endfor %}
            {% endif %}
          </div>
          <!-- Email input -->
          <div class="email-input">
            <span class="email-input__icon-left">
              {{ load_svg('image/catalog/svg/ui/email-icon.svg') }}
            </span>
            <input type="email" class="email-input__field" placeholder="Enter your e-mail" />
            <button class="email-input__send">
              {{ load_svg('image/catalog/svg/ui/email-send.svg') }}
            </button>
          </div>
        </div>

        <!-- Соц сети моб -->
        <div class="footer__logo-social mobile">
          {% if sf.social.items %}
            {% for s in sf.social.items %}
              <a href="{{ s.url }}" class="logo-social-{{ s.platform }}" target="_blank" rel="noopener">
                {% if s.icon %}
                  {{ load_svg('image/' ~ s.icon) }}
                {% else %}
                  {{ s.platform }}
                {% endif %}
              </a>
            {% endfor %}
          {% endif %}
        </div>

        <!-- Навигация -->
        <div class="footer__navigation-container footer__row-container">
          <h3>{{ sf.nav.title }} {{ load_svg('image/catalog/svg/ui/arrow-list-mobile.svg') }}</h3>
          <div class="footer__navigation-box footer__row-box">
            {% if sf.nav.items %}
              {% set col1 = [] %}
              {% set col2 = [] %}
              {% for item in sf.nav.items %}
                {% if item.column is defined and item.column == '2' %}
                  {% set col2 = col2|merge([item]) %}
                {% else %}
                  {% set col1 = col1|merge([item]) %}
                {% endif %}
              {% endfor %}
              <div>
                {% for item in col1 %}
                  <a href="{{ item.href }}">{{ item.text }}</a>
                {% endfor %}
              </div>
              <div>
                {% for item in col2 %}
                  <a href="{{ item.href }}">{{ item.text }}</a>
                {% endfor %}
              </div>
            {% endif %}
          </div>
        </div>

        <!-- Лева часть -->
        <div class="footer__rowLeft-form footer__row-container">
          <h3>{{ sf.listing_left.title }} {{ load_svg('image/catalog/svg/ui/arrow-list-mobile.svg') }}</h3>
          <div class="footer__rowLeft-box footer__row-box">
            {% if sf.listing_left.items %}
              {% set col1 = [] %}
              {% set col2 = [] %}
              {% for item in sf.listing_left.items %}
                {% if item.column is defined and item.column == '2' %}
                  {% set col2 = col2|merge([item]) %}
                {% else %}
                  {% set col1 = col1|merge([item]) %}
                {% endif %}
              {% endfor %}
              <div>
                {% for item in col1 %}
                  <a href="{{ item.href }}">{{ item.text }}</a>
                {% endfor %}
              </div>
              <div>
                {% for item in col2 %}
                  <a href="{{ item.href }}">{{ item.text }}</a>
                {% endfor %}
              </div>
            {% endif %}
          </div>
        </div>

        <!-- Правая часть -->
        <div class="footer__rowRight-form footer__row-container">
          <h3>{{ sf.listing_right.title }} {{ load_svg('image/catalog/svg/ui/arrow-list-mobile.svg') }}</h3>
          <div class="footer__rowRight-box footer__row-box">
            {% if sf.listing_right.items %}
              {% set col1 = [] %}
              {% set col2 = [] %}
              {% for item in sf.listing_right.items %}
                {% if item.column is defined and item.column == '2' %}
                  {% set col2 = col2|merge([item]) %}
                {% else %}
                  {% set col1 = col1|merge([item]) %}
                {% endif %}
              {% endfor %}
              <div>
                {% for item in col1 %}
                  <a href="{{ item.href }}">{{ item.text }}</a>
                {% endfor %}
              </div>
              <div>
                {% for item in col2 %}
                  <a href="{{ item.href }}">{{ item.text }}</a>
                {% endfor %}
              </div>
            {% endif %}
          </div>
        </div>
      </div>

      <div class="footer__top-bottom">
        <!-- Соц сети -->
        <div class="footer__logo-social">
          {% if sf.social.items %}
            {% for s in sf.social.items %}
              <a href="{{ s.url }}" class="logo-social-{{ s.platform }}" target="_blank" rel="noopener">
                {% if s.icon %}
                  {{ load_svg('image/' ~ s.icon) }}
                {% else %}
                  {{ s.platform }}
                {% endif %}
              </a>
            {% endfor %}
          {% endif %}
        </div>
        <!-- Партнеры -->
        <div class="multi-logo">
          {% if sf.partners.items %}
            {% for p in sf.partners.items %}
              <a href="{{ p.href }}">
                <img src="image/{{ p.image }}" alt="{{ p.alt }}" />
              </a>
            {% endfor %}
          {% endif %}
        </div>
      </div>
    </div>
    <!-- Нижняя часть -->
    <div class="footer__bottom">
      <div class="container">
        <div class="left">
          {% if sf.bottom.links %}
            {% for link in sf.bottom.links %}
              <a href="{{ link.href }}">{{ link.text }}</a>
            {% endfor %}
          {% endif %}
        </div>
        <span class="copyright">{{ sf.bottom.copyright }}</span>
      </div>
    </div>
  </footer>

</body>

</html>
